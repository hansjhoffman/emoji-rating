{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "compileOnSave": true
}
